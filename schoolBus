myList = list()

n = int(input("Enter number of students on the bus: "))

for i in range(0, n):
  
  myList.append(input("input student name\n"))

print(myList)

editStudent = input("Type 1 if you would like to edit a students name and 0 otherwise\n")
editStudent = int(editStudent)
if(editStudent > 0):
  x = input("Which seat number would you like to change (starting at seat 0)? \n")
  x = int(x)
  myList[x] = input("New name? \n") 
  print(myList)
