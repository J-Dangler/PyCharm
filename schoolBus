School = []

class Name():
  def __init__(self, title):
    self.title = title

class Seat():
  def __init__(self, number):
    self.number = number

class Student():
  
  def __init__(self, name, seat):
    self.name = input("What is their name?\n")
    self.seat = input("What is their seat number?\n")
    School[seat.number] = name.title
addStudent = input("Type 1 if you would like to add a student to the bus and 0 otherwise\n")
addStudent = int(addStudent)
if(addStudent > 0):
  name1 = ""
  seat2 = 0
  Student(name1, seat2)
  
else:
  check = input("Which seat would you like to check?\n")
  School[check]
